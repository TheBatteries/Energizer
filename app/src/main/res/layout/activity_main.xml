<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/median">

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user_registration"
        android:layout_marginBottom = "15dp"
        android:layout_marginTop="180dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_below="@id/tvSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_message"
        android:layout_margin="15dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnVolunteer"
        android:background="@drawable/button_yellow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/volunteer"
        android:background="@color/translucent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnNonProfit"
        android:background="@drawable/button_blue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:text="@string/non_profit"
        android:background="@color/translucent"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_below="@id/btnNonProfit"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLogin"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp" />


</RelativeLayout>