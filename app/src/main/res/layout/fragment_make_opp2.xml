<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeOpp2Fragment">


    <AutoCompleteTextView
        android:id="@+id/actvOppSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:hint="@string/skill_needed"
        android:textSize="15dp"/>

    <AutoCompleteTextView
        android:id="@+id/actvOppCause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/actvOppSkill"
        android:textSize="15dp"
        android:hint="@string/enter_cause" />

    <Button
        android:id="@+id/btnFinishUpdating"
        android:background="@drawable/button_yellow_selector"
        android:enabled="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actvOppCause"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:text="Continue"/>

</RelativeLayout>